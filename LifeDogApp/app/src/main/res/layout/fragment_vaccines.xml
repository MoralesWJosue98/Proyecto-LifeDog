<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/pale_gray"
    tools:context=".ui.VaccinesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Refuerzo"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000133"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/divider6"
            android:layout_width="0dp"
            android:layout_height="@dimen/dividers"
            android:layout_marginStart="@dimen/medium_gap"
            android:layout_marginTop="@dimen/extra_small_gap"
            android:layout_marginEnd="@dimen/medium_gap"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />


        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Fecha "
            android:textColor="@color/dark_blue"
            app:layout_constraintEnd_toStartOf="@+id/textView34"
            app:layout_constraintHorizontal_bias="0.004"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider6" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="96dp"
            android:text="Hora"
            android:textColor="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider6" />

        <EditText
            android:id="@+id/dateRefuerzo"
            android:layout_width="223dp"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/custom_input_anadir"
            android:clickable="true"
            android:drawableStart="@drawable/ic_calendar"

            android:drawablePadding="@dimen/input_padding"
            android:elevation="@dimen/default_shadow"
            android:ems="10"

            android:inputType="date"
            android:maxLines="1"
            android:padding="@dimen/input_padding"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView33"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/horaRefuerzo"
            android:layout_width="108dp"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/custom_input_anadir"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="10dp"
            android:elevation="@dimen/default_shadow"
            android:ems="10"
            android:inputType="number"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toEndOf="@+id/dateRefuerzo"
            app:layout_constraintTop_toBottomOf="@+id/textView34"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Clínica"
            android:textColor="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateRefuerzo"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/lugar_refuerzo"
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_input_anadir"

            android:clickable="true"
            android:drawableStart="@drawable/ic_place"
            android:drawablePadding="@dimen/input_padding"

            android:elevation="@dimen/default_shadow"
            android:ems="10"
            android:inputType="date"
            android:maxLines="1"
            android:padding="@dimen/input_padding"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView44"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/checkBox_refuerzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Recordar el día anterior"
            android:textColor="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.896"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lugar_refuerzo" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Historial"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000133"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.084"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_refuerzo"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dividers"
            android:layout_marginStart="@dimen/medium_gap"
            android:layout_marginTop="@dimen/extra_small_gap"
            android:layout_marginEnd="@dimen/medium_gap"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>