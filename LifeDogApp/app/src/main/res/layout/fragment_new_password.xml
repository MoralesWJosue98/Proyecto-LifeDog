<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aqua_200"
    tools:context=".ui.NewPasswordFragment">

    <TextView
        android:id="@+id/resetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_gap"
        android:text="@string/title_reset_password"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/lockImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/medium_gap"
        android:src="@drawable/ic_write_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetTitle" />

    <EditText
        android:id="@+id/resetPassEditText"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_gap"
        android:background="@drawable/custom_input_dark_blue"
        android:drawableStart="@drawable/ic_padlock"
        android:drawablePadding="@dimen/input_padding"
        android:drawableTint="@color/dark_blue"
        android:elevation="@dimen/default_shadow"
        android:ems="10"
        android:hint="@string/hint_new_password"
        android:inputType="textPassword"
        android:padding="@dimen/input_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lockImageView" />

    <EditText
        android:id="@+id/resetConfPassEditText"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gap"
        android:background="@drawable/custom_input_dark_blue"
        android:drawableStart="@drawable/ic_padlock"
        android:drawablePadding="@dimen/input_padding"
        android:drawableTint="@color/dark_blue"
        android:elevation="@dimen/default_shadow"
        android:ems="10"
        android:hint="@string/hint_confirm_password"
        android:inputType="textPassword"
        android:padding="@dimen/input_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetPassEditText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_dark_bottom_deco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/resetPswrdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_gap"
        android:backgroundTint="@color/dark_blue"
        android:text="@string/btn_reset"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetConfPassEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>