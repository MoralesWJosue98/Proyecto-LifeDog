<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LifeDogApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aqua_200</item>
        <item name="colorPrimaryVariant">@color/aqua_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/pale_gray</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSecondaryVariant">@color/gray</item>

        <item name="colorAccent">@color/aqua_200</item>
        <item name="colorOnSurface">@color/dark_blue</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>